{
	"customizations": {
		"vscode": {
			"extensions": [
				"cschleiden.vscode-github-actions"
			],
			"settings": {
				"editor.formatOnSave": true,
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/usr/bin/zsh"
					}
				},
				"terminal.integrated.defaultProfile.linux": "zsh",
				"files.exclude": {
					"**/CODE_OF_CONDUCT.md": true,
					"**/LICENSE": true
				}
			}
		}
	},
    "containerEnv": {
        "XDG_CONFIG_HOME": "/root/.config"
    },
	"dockerFile": "DockerFile",
	"onCreateCommand": "bash -i ${containerWorkspaceFolder}/.devcontainer/post-creation-setup.sh",
	"features": {
		"ghcr.io/devcontainers-contrib/features/tmux-apt-get:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers-contrib/features/neovim-homebrew:1": {},
		"ghcr.io/joshuanianji/devcontainer-features/github-cli-persistence:0": {}
	}
}
